{
    "webserver" : {
        "views/users": {
            "view": "fostgres.sql",
            "configuration": {
                "dbname": ["request", "headers", "__pgdsn", "dbname"],
                "sql": [
                    {
                        "return": "object",
                        "path": [1],
                        "GET": "SELECT * FROM users WHERE username=$1",
                        "PUT": [
                            {
                                "table": "users",
                                "schema": {
                                    "properties": {
                                        "email": {
                                            "type": "string",
                                            "minLength": 4
                                        }
                                    }
                                },
                                "columns": {
                                    "username": {
                                        "key": true,
                                        "source": 1
                                    },
                                    "email": {}
                                }
                            },
                            {
                                "table": "passwords",
                                "schema": {
                                    "properties": {
                                        "hashed": {},
                                        "salt": {}
                                    }
                                },
                                "columns": {
                                    "username": {
                                        "key": true,
                                        "source": 1
                                    },
                                    "hashed": {},
                                    "salt": {}
                                }
                            }
                        ]
                    },
                    {
                        "return": "object",
                        "path": [1, "/password-with-precondition-array"],
                        "GET": "SELECT * FROM passwords WHERE username=$1",
                        "precondition": ["eq", ["match", 1], ["header", "__user"]] 
                    },
                    {
                        "return": "object",
                        "path": [1, "/password-with-precondition-object"],
                        "GET": "SELECT * FROM passwords WHERE username=$1",
                        "precondition": {
                            "check": ["eq", ["match", 1], ["header", "__user"]],
                            "failed": {
                                "view": "fost.response.401",
                                "configuration": {
                                    "schemes": "Bearer"
                                }
                            }
                        }
                    },
                    {
                        "return": "object",
                        "path": [1, "/avatar"],
                        "GET": "SELECT * FROM avatar_upload WHERE username=$1",
                        "PUT": {
                            "table": "avatar_upload",
                            "columns": {
                                "username": {
                                    "key": true,
                                    "source": 1
                                },
                                "avatar": {
                                    "type": "file",
                                    "store": "avatar-uploads"
                                }
                            },
                            "returning": ["avatar"]
                        }
                    }
                ]
            }
        }
    },
    "File storage": {
        "avatar-uploads": {
            "path": "/tmp"
        }
    }
}

